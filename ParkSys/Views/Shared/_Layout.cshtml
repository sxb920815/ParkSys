@using DAL
@using Model
@{
    var user = UserAuthorSvr.CurrentUser;
}

<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <link rel="icon" href="logo.png" type="image/x-icon" />
    <link rel="shortcut icon" href="logo.png" type="image/x-icon" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>停车场智能引导系统</title>
    <!-- Bootstrap -->
    <link href="~/Content/gentelella-1.3.0/vendors/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/gentelella-1.3.0/vendors/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- iCheck -->
    <link href="~/Content/gentelella-1.3.0/vendors/iCheck/skins/flat/green.css" rel="stylesheet" />
    <!-- bootstrap-progressbar -->
    <link href="~/Content/gentelella-1.3.0/vendors/bootstrap-progressbar/css/bootstrap-progressbar-3.3.4.css" rel="stylesheet" />
    <!-- jVectorMap -->
    <link href="~/Content/gentelella-1.3.0/production/css/maps/jquery-jvectormap-2.0.3.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="~/Content/gentelella-1.3.0/build/css/custom.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="clearfix"></div>
                    <!-- menu profile quick info -->
                    <div class="profile">
                        <div class="profile_pic">
                            <img src="~/Content/gentelella-1.3.0/production/images/img.jpg" alt="..." class="img-circle profile_img">
                        </div>
                        <div class="profile_info">
                            <span>欢迎</span>
                            <h2>@user.UserName</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->
                    <br />
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>菜单</h3>
                            <ul class="nav side-menu">
                                @foreach (var item in Permission.GetPermissionsByFlag(user.Permission))
                                {
                                    <li>
                                        <a><i class="fa fa-home"></i>@item.Name <span class="fa fa-chevron-down"></span> </a>
                                        <ul class="nav child_menu">
                                            @foreach (var citem in item.Chlids)
                                            {
                                                <li>
                                                    <a href="@citem.URL">@citem.Name</a>
                                                </li>
                                            }
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                   
                </div>
            </div>
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav class="" role="navigation">
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <img src="~/Content/gentelella-1.3.0/production/images/img.jpg" alt="">@user.UserName
                                    <span class=" fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li><a href="/Login/ChangePassword/@user.UserId">修改密码</a></li>
                                    <li><a href="/Login/Index"><i class="fa fa-sign-out pull-right"></i>注销</a></li>
                                </ul>
                            </li>
                            
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <!-- top tiles -->
                <div class="row">@RenderBody()</div>
                <!-- /top tiles -->
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    杭州博志科技有限公司
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
    <!-- jQuery -->
    <script src="~/Content/gentelella-1.3.0/vendors/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/Content/gentelella-1.3.0/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Custom Theme Scripts -->
    <script src="~/Content/gentelella-1.3.0/build/js/custom.min.js"></script>




    <script src="~/Content/gentelella-1.3.0/vendors/fastclick/lib/fastclick.js"></script>
    <!-- NProgress -->
    <script src="~/Content/gentelella-1.3.0/vendors/nprogress/nprogress.js"></script>
    <!-- Datatables -->
    <script src="~/Content/gentelella-1.3.0/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/gentelella-1.3.0/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/gentelella-1.3.0/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Content/gentelella-1.3.0/vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
    <script src="~/Content/gentelella-1.3.0/vendors/datatables.net-buttons/js/buttons.flash.min.js"></script>
    <script src="~/Content/gentelella-1.3.0/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Content/gentelella-1.3.0/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/Content/gentelella-1.3.0/vendors/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js"></script>
    <script src="~/Content/gentelella-1.3.0/vendors/datatables.net-keytable/js/dataTables.keyTable.min.js"></script>
    <script src="~/Content/gentelella-1.3.0/vendors/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Content/gentelella-1.3.0/vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js"></script>
    <script src="~/Content/gentelella-1.3.0/vendors/datatables.net-scroller/js/datatables.scroller.min.js"></script>
    <script src="~/Content/gentelella-1.3.0/vendors/jszip/dist/jszip.min.js"></script>
    <script src="~/Content/gentelella-1.3.0/vendors/pdfmake/build/pdfmake.min.js"></script>
    <script src="~/Content/gentelella-1.3.0/vendors/pdfmake/build/vfs_fonts.js"></script>
</body>
</html>
@RenderSection("scripts", required: false)
