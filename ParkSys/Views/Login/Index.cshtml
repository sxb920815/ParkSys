@{
    ViewBag.Title = "Login";
    Layout = null;
}





<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>停车场智能引导系统</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link href="~/Content/gentelella-1.3.0/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Content/gentelella-1.3.0/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="https://colorlib.com/polygon/gentelella/css/animate.min.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="~/Content/gentelella-1.3.0/build/css/custom.min.css" rel="stylesheet">
</head>
<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form action="/Login/Index" method="post">
                        <h1>停车场智能引导系统</h1>
                        <div>
                            <input type="text" class="form-control" name="username" placeholder="用户名" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" name="password" placeholder="密码" required="" />
                        </div>
                        <div>
                            <button type="submit" class="btn btn-default submit">登录</button>
                        </div>
                        <div class="clearfix"></div>
                        
                    </form>
                </section>
            </div>
            
        </div>
    </div>
</body>
</html>