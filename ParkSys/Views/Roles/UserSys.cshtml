
@model List<Model.User>
@{
    ViewBag.Title = "UserSys";
}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>用户管理</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        &nbsp;&nbsp;<a href="/Roles/UserEdit"><button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">添加</button></a>
        <div class="x_content">
            <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th class="column-title"> </th>
                            <th class="column-title">登录名</th>
                            <th class="column-title">创建时间</th>
                            <th class="column-title no-link last">
                                <span class="nobr">编辑</span>
                            </th>
                            <th class="bulk-actions" colspan="7">
                                <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class=" ">@item.UserId</td>
                                <td class=" ">@item.LoginName</td>
                                <td class=" ">@item.CreateTime</td>
                                <td class=" ">
                                    <a onclick="if(confirm('确定要删除该用户吗？'))return true;return false;" href="/Roles/UserDelete/@item.UserId">删除</a>
                                    <a href="/Roles/UserEdit/@item.UserId">修改</a>
                                    <a  href="/Roles/Roles/@item.UserId">权限管理</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


