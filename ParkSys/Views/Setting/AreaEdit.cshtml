@model Model.Area
@{
    ViewBag.Title = "AreaEdit";
}

<form class="form-horizontal form-label-left" novalidate action="/Setting/AreaEdit" method="post">
    @if (Model != null)
    {
        <span class="section">区域修改</span>
         <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                编号 <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input name="AreaId" value="@Model.AreaId" readonly="readonly" required="required" class="form-control col-md-7 col-xs-12">
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                区域名称 <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input name="AreaName" value="@Model.AreaName" required="required" class="form-control col-md-7 col-xs-12">
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                总车位 <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input name="ParkingNumber" value="@Model.ParkingNumber" data-validate-linked="IP" required="required" class="form-control col-md-7 col-xs-12">
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                剩余车位 <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input name="RestParkingNumber" value="@Model.RestParkingNumber required="required" data-validate-minmax="10,100" class="form-control col-md-7 col-xs-12">
            </div>
        </div>
    }
    else
    {
        <span class="section">区域添加</span>
         <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                区域名称 <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input name="AreaName"  required="required" class="form-control col-md-7 col-xs-12">
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                总车位 <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input name="ParkingNumber"  data-validate-linked="IP" required="required" class="form-control col-md-7 col-xs-12">
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                剩余车位 <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input name="RestParkingNumber"  required="required" data-validate-minmax="10,100" class="form-control col-md-7 col-xs-12">
            </div>
        </div>
    }


    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-6 col-md-offset-3">
            <button type="button" onclick="history.go(-1)" class="btn btn-primary">取消</button>
            <button id="send" type="submit" class="btn btn-success">保存</button>
        </div>
    </div>
</form>
